// @Test Simple actions
line {
  width: 1;
}

// @Test Multiple actions
line {
  width: 1;
  casing-width: 1;
}

// @Test Period in tag value
line {
  width: 0.5;
}

// @Test Multiple statement in two blocks
line {
    casing-width: 5;
}
{
    width: 4;
}

// @Expected
line {
    casing-width: 5;
    width: 4;
}

// @Test Unquoted font name
line {
    font-family: sans-serif,arial;
}

// @Test Quoted font name
line {
    font-family: "DjVu Sans";
}

// @Test Colon in tag name
line {
    text: addr:housenumber;
}

// @Test Unicode in tag value
line {
    text: "北野 武";
}

// @Test 3 digit color
line {
    color: #fff;
}

// @Test 6 digit color
line {
    color: #fefefe;
}

// @Test rgba color
line {
    color: rgba(100, 201, 3, 0.5);
}

// @Test 6 digit color padding
line {
    color: #0a0a0a;
}

// @Test Black color
line {
    color: #000;
}
